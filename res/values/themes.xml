<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Variation on the Holo Light theme that styles the Action Bar -->
    <style name="Theme.Dark" parent="Theme.Sherlock">
        <item name="toggle">@drawable/ic_drawer_light</item>
        <item name="dworksLogo">@drawable/dworks_dark</item>
        <item name="background">@android:color/black</item>
        <item name="text">@android:color/white</item>
        <item name="folder">@drawable/folder_blue</item>
        <item name="lineColor">@android:color/white</item>
        <item name="card">@drawable/card_white</item>
        <item name="aboutColor">@android:color/black</item>
        <item name="aboutTheme">@style/Theme.Dark.About</item>
        <item name="mainFolder">@drawable/folder_blue</item>
        <item name="specialFolder">@drawable/folder_white</item>
        <item name="actionText">@android:color/white</item>
        <item name="backgroundLayoutColor">#2D2D2D</item>
        <item name="actionBar">@drawable/abs__ab_bottom_solid_dark_holo</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
        <item name="android:actionBarStyle">@style/DarkActionBar</item>
        <item name="actionBarSplitStyle">@style/DarkActionBar</item>
        <item name="android:actionBarSplitStyle">@style/DarkActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonAppTheme</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Theme.Light" parent="Theme.Sherlock.Light">
        <item name="toggle">@drawable/ic_drawer</item>
        <item name="dworksLogo">@drawable/dworks</item>
        <item name="text">@android:color/black</item>
        <item name="background">@android:color/white</item>
        <item name="folder">@drawable/folder_black</item>
        <item name="lineColor">@color/greyColorLight</item>
        <item name="card">@drawable/card_black</item>
        <item name="aboutColor">@android:color/white</item>
        <item name="aboutTheme">@style/Theme.Light.About</item>
        <item name="mainFolder">@drawable/folder_grey</item>
        <item name="specialFolder">@drawable/folder_black</item>
        <item name="actionText">@android:color/black</item>
        <item name="backgroundLayoutColor">#EBEBEB</item>
        <item name="actionBar">@drawable/abs__ab_bottom_solid_light_holo</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonAppTheme</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Theme.Pleasant" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="toggle">@drawable/ic_drawer_light</item>
        <item name="dworksLogo">@drawable/dworks</item>
        <item name="text">@android:color/black</item>
        <item name="background">@android:color/white</item>
        <item name="folder">@drawable/folder_black</item>
        <item name="lineColor">@color/greyColorLight</item>
        <item name="card">@drawable/card_black</item>
        <item name="aboutColor">@android:color/white</item>
        <item name="aboutTheme">@style/Theme.Pleasant.About</item>
        <item name="mainFolder">@drawable/folder_grey</item>
        <item name="specialFolder">@drawable/folder_black</item>
        <item name="actionText">@android:color/white</item>
        <item name="backgroundLayoutColor">#EBEBEB</item>
        <item name="actionBar">@drawable/abs__ab_bottom_solid_inverse_holo</item>
        <item name="android:windowAnimationStyle">@style/MyAnimation</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonAppTheme</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Theme.Dark.About">
        <item name="android:windowAnimationStyle">@style/MyAnimationAbout</item>
    </style>

    <style name="Theme.Light.About">
        <item name="android:windowAnimationStyle">@style/MyAnimationAbout</item>
    </style>

    <style name="Theme.Pleasant.About">
        <item name="android:windowAnimationStyle">@style/MyAnimationAbout</item>
    </style>

    <style name="Theme.Tranparent" parent="android:Theme.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">@color/SemiTransparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@color/SemiTransparent</item>
        <item name="android:windowAnimationStyle">@style/MyReverseAnimation</item>
    </style>

    <style name="Theme.Dailog" parent="android:Theme.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">?background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyAnimationAbout</item>
    </style>

    <style name="Theme.Dailog.Splash">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Theme.Dailog.Login">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">?background</item>
    </style>

    <style name="Theme.Dailog.Properties" parent="android:Theme.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowBackground">?background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/MyAnimationAbout</item>
    </style>

</resources>